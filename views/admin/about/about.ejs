<%- include("../../partition/header.ejs") %>

    <section class="dashboard-wrap mtb-40">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        <div class="dash-left">
                            <ul>
                                <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                                <li><a href="/admin/blog">Blogs</a></li>
                                <li><a href="/admin/about">About</a></li>
                                <li><a href="/admin/contact">Contact</a></li>
                                <li><a href="/admin/category">Categories</a></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1>About Page</h1>
                                </div>
                            </div>
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th>About Discription</th>
                                    <th>Action</th>
                                </tr>
                                <% cat.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= item.content %>
                                        </td>
                                        <td>
                                            <a href="/admin/edit_about/<%= item._id %>"
                                                class="btn btn-info btn-sm">Edit</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include("../../partition/footer.ejs") %>